extends ../../layouts/base.jade
block head
  title DC/OS Releases
block content
  .container.container--dark-background
    +header
    .container__content
      h1 DC/OS Releases
      p 
        | Find and download any release of DC/OS, which is 100% open source. For DC/OS Enterprise releases, please contact 
        a(href='https://mesosphere.com/pricing/') Mesosphere sales.
  .outer-container.bg-gray.clearfix.pt4.pb3.px2
    .row
      .max-width-4.mx-auto.clearfix
        .cards.col-12
        
          .release-card.release-stable.col.col-12.md-col-6.md-pr1.relative
            div.bg-white.center.inner.px3.pt4.pb3.mb2.md-mb0
              h3.mb0 Latest Stable
              p.release-version.pb1 DC/OS 1.9.0
              p.hero-list__item__copy__paragraph.release-copy Latest stable release. Ready for production use.
              a.cta.cta--text.release-notes.pb2(href='/releases/1.9.0') Release Notes

              .col-12.flex-end.mt-auto.relative
                div.relative.dropdown.mb2
                  a.btn.btn-primary.mb0.block.center.no-arrow.text-white.bg-heliotrope Get Release
                    img.ml1.align-middle(src='/assets/images/icons/arrow-down-docs-unselected-white.svg' style='margin-top: -2px;')
                  ul.z-500.left
                    li: a(href='https://downloads.dcos.io/dcos/stable/aws.html', target='_blank') Amazon Web Services
                    li: a(href='https://downloads.dcos.io/dcos/stable/azure.html', target='_blank') Azure
                    li: a(href='https://downloads.dcos.io/dcos/stable/commit/0ce03387884523f02624d3fb56c7fbe2e06e181b/dcos_generate_config.sh') Direct Download

          .release-card.release-rc.col.col-12.md-col-6.relative.mb2.md-pl1
            .bg-white.center.inner.px3.py1
              h3.mb0 Release Candidate
              p.release-version.pb0 DC/OS 1.10.0-rc1
              
              div.relative.dropdown.mb1
                a.btn.btn-primary.mb0.block.center.no-arrow.text-white.bg-heliotrope Get Release
                  img.ml1.align-middle(src='/assets/images/icons/arrow-down-docs-unselected-white.svg' style='margin-top: -2px;')
                ul.left.z-500
                  li: a(href='https://downloads.dcos.io/dcos/stable/aws.html', target='_blank') Amazon Web Services
                  li: a(href='https://downloads.dcos.io/dcos/stable/azure.html', target='_blank') Azure
                  li: a(href='https://downloads.dcos.io/dcos/stable/commit/0ce03387884523f02624d3fb56c7fbe2e06e181b/dcos_generate_config.sh') Direct Download
              a.cta.cta--text.release-notes.mb1(href='/releases/1.10.0') Release Notes

          .release-card.release-snapshot.col.col-12.md-col-6.relative.md-pl1
            .bg-white.center.inner.px3.py1
              h3.mb0 Snapshot
              p.release-version.pb0 DC/OS 1.11.0 - shot 20170511

              div.relative.dropdown.mb1
                a.btn.btn-primary.mb0.block.center.no-arrow.text-white.bg-heliotrope Get Release
                  img.ml1.align-middle(src='/assets/images/icons/arrow-down-docs-unselected-white.svg' style='margin-top: -2px;')
                ul.left.z-500
                  li: a(href='https://downloads.dcos.io/dcos/testing/master/aws.html', target='_blank') Amazon Web Services
                  li: a(href='https://downloads.dcos.io/dcos/testing/master/azure.html', target='_blank') Azure
                  li: a(href='https://downloads.dcos.io/dcos/testing/master/dcos_generate_config.sh') Direct Download


  .releases-container
    each release in locals.releases
      .release
        .release-item.max-width-4.mx-auto.md-flex.py4.px2.md-px0
          .release-item--content.col-12.md-col-8.md-pr3
            h2.mt0.bold #{ release.title }
            strong.block.mb2 #{ release.month } #{ release.day }, #{ release.year }
            if(release.description)
              p.my1.mb3 #{ release.description }
            strong.block.mb1 Features
            if(release.features)
              ul.mb3
                each feature in release.features
                  li #{ feature }
                  
            a(href!=release.subreleases[0].url target='_blank').mb3.small.cta.cta--text.inline-block #{ release.subreleases[0].name } Release notes
            
            if(release.downloadlink)
              div.relative.dropdown(style='text-align: left; left: 0; width: 100%;')
                a.btn.btn-primary.mb0.inline-block.center.no-arrow.text-white.bg-heliotrope Get Release
                  img.ml1.align-middle(src='/assets/images/icons/arrow-down-docs-unselected-white.svg' style='margin-top: -2px;')
                ul.z-500
                  if(release.downloadlink.amazon)
                    li: a(href='#{ release.downloadlink.amazon }', target='_blank') Amazon Web Services
                  if(release.downloadlink.azure)
                    li: a(href='#{ release.downloadlink.azure }', target='_blank') Azure
                  if(release.downloadlink.direct)
                    li: a(href='#{ release.downloadlink.direct }') Direct Download
          
          .release-item--releases.col-12.md-col-4
            h3.strong Releases
            ul
              each subrelease in release.subreleases
                li
                  a(href='#{ subrelease.url }').cta.cta--text #{ subrelease.name }
            
            
            
    .outer-container.clearfix.py5.px2.release
      .row.flex.flex-column
        .sm-col.sm-col-12.md-col-8.mx-auto.center
          h2.heading-margin-bottom.center.mx-auto Older Versions
          p.center DC/OS Community Edition describes versions 1.6 and earlier, which were free and available from Mesosphere, Inc. but not open source. When Mesosphere open sourced DC/OS on April 19th, 2016, they stopped distributing Community Edition, and versions 1.6 and earlier are no longer available.
                  
  .container.container--dark-background
    .container__content
      h2 Install on any virtual or physical machines.
      a(href='/install').cta.cta--button Install
    +footer
